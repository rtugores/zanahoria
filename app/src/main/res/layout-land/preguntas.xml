<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_naranja"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Bienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:background="#298A08"
        android:gravity="center"
        android:text="@string/bienvenida"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
  
    <TextView
        android:id="@+id/Bienvenida_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dip"
        android:background="#298A08"
        android:gravity="center"
        android:text="@string/bienvenida_sub"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
      
    <TextView
        android:id="@+id/primera_ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_weight="0.39"
        android:gravity="center|center_vertical"
        android:text="@string/primera_ask"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_weight="1">        
        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/primera1" />
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/primera2" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/primera3" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:background="#FF8000"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_ini"
            android:layout_width="120dip"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="@string/inicio" />

        <Button
            android:id="@+id/button_sig"
            android:layout_width="120dip"
            android:layout_height="40dp"
            android:layout_marginLeft="240dip"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="@string/siguiente" />

    </LinearLayout>

</LinearLayout>